{% extends 'base.html.twig' %}


{% block body %}

    <h1>Refaire votre Avis</h1>

    {{ form_start(form) }}
    {{ comments.user }}
    {{ form_row(form.name) }}
    {{ form_row(form.content) }}

    <div class="text-right">
        <button type="submit" class="btn btn-primary">
            Enregistrer
        </button>
        <a href="{{ path('message') }}"
           class="btn btn-outline-secondary">
            Retour
        </a>
    </div>

    {# fermeture de la balise form #}
    {{ form_end(form) }}
{% endblock %}
