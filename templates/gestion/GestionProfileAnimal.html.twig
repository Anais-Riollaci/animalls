{% extends 'base.html.twig' %}{% block body %}    <table class="table animal-table">        <thead class="thead-dark">        <tr>            <th colspan="9" scope="col">Profils</th>        </tr>        </thead>        <tbody>        <tr>            <td>ID</td>            <td>Nom</td>            <td>Espèce</td>            <td>Race</td>            <td>Sexe</td>            <td>Age</td>            <td>Catégorie</td>            <td>Photo</td>        </tr>        {% for animal in animals %}            <tr>                <td>{{ animal.id }}</td>                <td>{{ animal.name }}</td>                <td>{{ animal.species.name }}</td>                <td>{{ animal.race.name }}</td>                <td>{{ animal.gender }}</td>                <td>                    {% set birthDate_years = animal.birthDate|date('%y') %}                    {% if birthDate_years >= 1 %}                        {{ birthDate_years }} ans                    {% else %}                        {{ animal.birthDate|date('m') }} mois                    {% endif %}                </td>                <td>                    {% if animal.category %}                        {{ animal.category.title }}                    {% endif %}                </td>                <td><img src="{{ animal.image }}" alt="Photo de {{ animal.name }}"></td>                <td style="text-align: right;">                    <a href="{{ path('change_animal', {id: animal.id}) }}">                        <button type="submit" class="btn btn-warning"><i class="far fa-edit"></i></button>                    </a>                    <a href="{{ path('delete_animal', {id: animal.id}) }}">                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>                    </a>                </td>            </tr>        {% endfor %}        </tbody>    </table>    <button id="bouton" class="btn btn-info">Ajouter un animal</button>    <div class="hide" id="formToHide">        {{ form_start(NewAnimal) }}        {{ form_widget(NewAnimal) }}        {{ form_end(NewAnimal) }}    </div>{% endblock %}{% block javascripts %}    <script src="{{ asset('scripts/gestion_profile_animal.js') }}"></script>{% endblock %}{% block stylesheets %}    <link rel="stylesheet" href="{{ asset('style/gestion_animal.css') }}">{% endblock %}