{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style/accueil.css') }}">
{% endblock %}

{% block titre %} Accueil{% endblock %}

{% block body %}
    <div class="container">
        <div id="accueil">
            <div class="banniere">
                <img src="{{ asset('img/accueil/banniere1.png') }}" alt="Banniere d'un groupe d'animaux">
            </div>
            <div class="logo text-center">
                <h1><span class="dark">A</span><span class="orange">nim</span>'<span class="red">Alls</span></h1>
            </div>
            <section class="accueil">
                <hr>
                <p>
                    Bienvenue sur la page Web de l'Association Anim'Alls !
                    Nous recueillon des animaux et nous les soignons afin de leur trouver une nouvelle famille.
                </p>
                <hr>
                <h2> Nos amis à adopter <i class="fas fa-paw"></i></h2>


                <div class="carrousel col-md-12 col-xs-5">
                    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            {% for category in categories %}
                                <li data-target="#carouselExampleCaptions" data-slide-to="{{ loop.index - 1 }}"
                                    class="{{ loop.first ? 'active' : '' }}"></li>
                            {% endfor %}
                        </ol>
                        <div class="carousel-inner">
                            {% for category in categories %}
                                <div class="carousel-item {{ loop.first ? 'active' : '' }}">
                                    <img src="{{ asset(category.photo) }}"
                                         class="d-block w-100"
                                         alt="...">
                                    <div class="carousel-caption">
                                        <a class="category-title" href="{{ path('search_profile', {"init": {categories: category.id}}) }}"><strong>{{ category.title }}</strong></a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button"
                           data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button"
                           data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>

                <a href="{{ path('search_profile', {"init": {types: 2}})  }}"><button type="submit" id="cat" class="btn btn-dark btn-md"><i class="fas fa-cat"></i> Nos chats</button></a>
                <a href="{{ path('search_profile', {"init": {types: 1}})  }}"><button type="submit" id="dog" class="btn btn-dark btn-md">Nos chiens <i class="fas fa-dog"></i></a>
                </button>

            </section>
            <hr>
            <section class="a-propos" id="a-propos">  {# SECTION A PROPOS DE NOUS#}
                <h2>L'Association Anim'Alls</h2>
                <div>
                    <p>
