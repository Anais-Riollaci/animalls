{% extends 'base.html.twig' %}{% block stylesheets %}    <link rel="stylesheet" href="{{ asset('styles/Profile.css') }}">{% endblock %}{% block body %}    <div class="row row-image">        <div class="offset-4 col-4">            <div class="img-thumbnail"                 style='background-image: url("{{ animal.image }}")'></div>        </div>    </div>    <div class="row row-data">        <div class="offset-2 col-8">            <div class="list-group">                <a href="#" class="list-group-item list-group-item-action active">                    Profil                </a>                <a href="#" class="list-group-item list-group-item-action">Nom: {{ animal.name }}</a>                <a href="#" class="list-group-item list-group-item-action">Race: {{ animal.race.name }}</a>                <a href="#" class="list-group-item list-group-item-action">Sexe:                    {% if animal.gender == 'm' %}                        Masculin                    {% else %}                        FÃ©minin                    {% endif %}                </a>                <a href="#" class="list-group-item list-group-item-action">                    {% set age_years = age|date('%y') %}                    Age:                    {% if age_years >= 1 %}                        {{ age_years }} ans                    {% else %}                        {{ age|date('%m') }} mois                    {% endif %}                </a>            </div>            <button type="button" class="btn btn-outline-info">Nous contacter pour en savoir plus sur {{ animal.name }}</button>        </div>    </div>{% endblock %}