{% extends 'base.html.twig' %}


{% block body %}
    <h1>Gestion utilisateur</h1>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Date de naissance</th>
            <th scope="col">Adresse</th>
            <th scope="col">Code postal</th>
            <th scope="col">Ville</th>
            <th scope="col">N°téléphone</th>
            <th scope="col">Email</th>
        </tr>
        <tr>
            {% for users in user %}
            <th scope="row">{{ users.id }}</th>
            <th scope="row">{{ users.lastName }}</th>
            <th scope="row">{{ users.firstName }}</th>
            <th scope="row">{{ users.birthDate | date('d/m/Y')}}</th>
            <th scope="row">{{ users.street }}</th>
            <th scope="row">{{ users.zipCode }}</th>
            <th scope="row">{{ users.city }}</th>
            <th scope="row">{{ users.phoneNumber }}</th>
            <th scope="row">{{ users.email }}</th>
        <tr>
            {% endfor %}
        </tr>
    </table>
{% endblock %}