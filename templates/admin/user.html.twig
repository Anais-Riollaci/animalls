{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style/gestion_user.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <h1>Gestion utilisateur</h1>

    <table class="table-responsive">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Date de naissance</th>
            <th>Adresse</th>
            <th>Code postal</th>
            <th>Ville</th>
            <th>N°téléphone</th>
            <th>Email</th>
            <th>Supp</th>
        </tr>
        <tr>
            {% for users in user %}
            <td>{{ users.id }}</td>
            <td>{{ users.lastName }}</td>
            <td>{{ users.firstName }}</td>
            <td>{{ users.birthDate | date('d/m/Y')}}</td>
            <td>{{ users.street }}</td>
            <td>{{ users.zipCode }}</td>
            <td>{{ users.city }}</td>
            <td>{{ users.phoneNumber }}</td>
            <td>{{ users.email }}</td>
            <td>
                <a href="{{ path('app_admin_useradmin_delete', { 'id' : users.id }) }}">
                    <button type="submit" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i></button>
                </a>
            </td>
        <tr>
            {% endfor %}
        </tr>
    </table>
</div>
{% endblock %}
