{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style/gestion_article.css') }}">
{% endblock %}



{% block body %}
    <section class="gestion-article">
        <div class="col text-center">
            <button id="bouton" class="bouton">Cr√©er un nouvel article</button>
        </div>
        <div class="hide" id="formToHide">

            {{ form_start(form)}}

            {{ form_row(form.title, {'label': 'Titre:', 'attr': {'placeholder': "Titre de l'article"}}) }}
            {{ form_row(form.content, {'label': 'Article:', 'attr': {'placeholder': "Contenue de l'article"}}) }}
            {{ form_row(form.picture, {'label': 'Image:', 'attr': {'placeholder': "Image de l'article"}}) }}

            <div class="text-center">
                <button type="submit" class="btn btn-outline-light"><strong>Enregistrer</strong></button>
            </div>

            {{ form_end(form)}}
        </div>

        <table class="table-responsive" >

            <tr>
                <th class="th-id">Id</th>
                <th class="th-date">Date de creation</th>
                <th class="th-titre">Titre</th>
                <th class="th-content">Contenu</th>
                <th class="th-image">Image</th>
            </tr>
 
            <tr>
                {% for articles in article %}
                <td class="td-id">{{ articles.id }}</td>
   
                <td class="td-date">{{ articles.createdAt | date('d/m/Y')}}</td>
   
                <td class="td-titre">{{ articles.title }}</td>

                <td class="td-content">{{ articles.content }}</td>
         
                <td class="td-image">{{ articles.picture }}</td>
         
                <td style="text-align: right;">
                    <a href="{{ path('app_admin_article_edit', {'id': articles.id}) }}" id="btn" class="btn btn-outline-warning">
                        <i class="far fa-edit"></i>
                    </a>
                    <a href="{{ path('app_admin_article_delete', {'id': articles.id}) }}" id="btn" class="btn btn-outline-danger">
                       <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            <tr>
                {% endfor %}
            </tr>
        </table>
    </section>
{% endblock %}





{% block javascripts %}
    <script src="{{ asset('scripts/gestion_article.js') }}"></script>
{% endblock %}





