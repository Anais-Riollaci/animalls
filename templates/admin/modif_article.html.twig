{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style/gestion_article.css') }}">
{% endblock %}



{% block body %}
<section class="gestion-article">

        {{ form_start(form)}}

        {{ form_row(form.title, {'label': 'Titre:'}) }}
        {{ form_row(form.content, {'label': 'Article:'}) }}
        {{ form_row(form.picture, {'label': 'Image:'}) }}

        <div class="text-center">
            <button type="submit" class="btn btn-warning"><strong>Enregistrer</strong></button>
        </div>

        {{ form_end(form)}}
</section>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('scripts/gestion_article.js') }}"></script>
{% endblock %}
